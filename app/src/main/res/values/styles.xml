<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tv_grid_style" parent="Theme.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/activity_vertical_margin_small</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/tv_large</item>
    </style>

    <style name="tv_attention_style" parent="tv_default">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/tv_large</item>
    </style>

    <style name="tv_default" parent="Theme.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/tv_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
